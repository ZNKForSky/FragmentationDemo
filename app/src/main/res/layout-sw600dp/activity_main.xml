<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/fragment_news_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.example.fragmentationdemo.NewsTitleFragment"/>

    <FrameLayout
        android:id="@+id/fl_news_content"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/fragment_news_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.fragmentationdemo.NewsContentFragment"/>
    </FrameLayout>

</LinearLayout>